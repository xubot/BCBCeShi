<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.example.bckj.projectbcb.Activity.ForgetActivity">

    <include
        android:id="@+id/base"
        layout="@layout/activity_base"/>
    <TextView
        android:id="@+id/log_tv"
        android:layout_below="@id/base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="42.5dp"
        android:textSize="26dp"
        android:textColor="#fff"/>
    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="320dp"
        android:background="@drawable/shp"
        android:id="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/log_tv"
        android:layout_marginTop="50dp">
        <EditText
            android:id="@+id/forget_edit_usre"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入邮箱地址"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="15dp"
            android:textColorHint="#a9a9a9a9"/>
        <View
            android:layout_below="@id/forget_edit_usre"
            style="@style/Home_View"
            android:id="@+id/view1"/>
        <EditText
            android:id="@+id/forget_edit_code"
            android:layout_below="@+id/view1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:textSize="14dp"
            android:hint="请输入验证码"
            android:background="@null"
            android:textColorHint="#a9a9a9a9"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/forget_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获得验证码"
            android:background="@drawable/s"
            android:textSize="10dp"
            android:layout_alignBaseline="@+id/forget_edit_code"
            android:layout_alignBottom="@+id/forget_edit_code"
            android:layout_alignRight="@+id/view3"
            android:layout_alignEnd="@+id/view3"/>
        <View
            android:layout_below="@id/forget_edit_code"
            style="@style/Home_View"
            android:id="@+id/view3"/>

        <EditText
            android:id="@+id/forget_edit_pwd"
            android:layout_below="@id/view3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入新密码"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:textColorHint="#a9a9a9a9"/>
        <View
            android:layout_below="@id/forget_edit_pwd"
            style="@style/Home_View"
            android:id="@+id/view"/>
        <EditText
            android:id="@+id/forget_edit_repwd"
            android:layout_below="@id/view"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入确认新密码"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:textColorHint="#a9a9a9a9"/>
        <View
            android:layout_below="@id/forget_edit_repwd"
            style="@style/Home_View"
            android:id="@+id/view4"/>
        <Button
            android:id="@+id/forget_log"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:text="找回"
            android:textSize="19dp"
            android:textColor="#ffffff"
            android:background="@drawable/sp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/view4"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
