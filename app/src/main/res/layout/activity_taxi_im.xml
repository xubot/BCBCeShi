<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/base"
        layout="@layout/activity_base"/>

    <RelativeLayout
        android:id="@+id/taxi_rl_data"
        android:layout_below="@id/base"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/taxi_view_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_01"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/taxi_view_img"
            android:layout_toEndOf="@+id/taxi_view_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#333333"
            android:text="王师傅"/>

        <ImageView
            android:id="@+id/taxi_view_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_07"/>

        <ImageView
            android:id="@+id/taxi_view_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_04"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/taxi_view_im"
            android:layout_toStartOf="@+id/taxi_view_im"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rrrrrr"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/taxi_view_ll_messge"
            android:layout_width="280dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shp"
            android:hint="@string/taxi_msg"
            android:textColorHint="#c7c7cc"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/taxi_view_ll_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/icon_17"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/taxi_im"
        android:layout_below="@id/taxi_rl_data"
        android:layout_above="@id/rrrrrr"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <ListView
            android:id="@+id/taxi_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>