<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg">
    <include
        android:id="@+id/base"
        layout="@layout/activity_base"/>
    <ImageView
        android:id="@+id/personhead"
        android:layout_below="@id/base"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/img_04"/>

    <LinearLayout
        android:id="@+id/person_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/urse_rrr"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="@string/person_user"/>
            <EditText
                android:id="@+id/Mdetails_name"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:textCursorDrawable="@null"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:textSize="12sp"
                android:hint="xubotao"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d6d6d6"
            android:id="@+id/view"/>
        <RelativeLayout
            android:id="@+id/phone_rrr"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="@string/person_phone"/>
            <EditText
                android:id="@+id/Mdetails_phone"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:textCursorDrawable="@null"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:textSize="12sp"
                android:hint="13051672112"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/Mlogout_rr"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="45dp"
        android:background="@drawable/sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="#fff"
            android:text="@string/complete"/>
    </RelativeLayout>
</RelativeLayout>
