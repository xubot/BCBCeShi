<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="separate_View">
        <item name="android:layout_width">240dp</item>
        <item name="android:background">#efefef</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="long_separate_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="validation_Box">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:background">@drawable/s</item>
        <item name="android:layout_marginLeft">13dp</item>
    </style>

    <style name="confirm_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@mipmap/img_02</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="input_Box">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#a9a9a9</item>
    </style>

    <style name="revise_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="revise_Box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="asses_Star">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@mipmap/icon_09</item>
    </style>


   <!-- android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:src="@mipmap/icon_09"-->
</resources>
